<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jamie.framework.mapper.SysMenusMapper">
    <select id="list" resultType="com.jamie.framework.bean.SysMenus">
        SELECT DISTINCT
            m.*
        FROM
            sys_menus m
            JOIN sys_role_per p ON m.id = p.menu_id
            JOIN sys_user_roles u ON u.role_id = p.role_id
        WHERE
            m.enable =  '1' and u.user_id = #{userId}
            <if test="menu.code != null">
                <bind name="pattern" value="'%' + menu.getCode() + '%'" />
                and m.`code` = #{pattern}
            </if>
            <if test="menu.name != null">
                <bind name="pattern" value="'%' + menu.getName() + '%'" />
                and m.`name` like #{pattern}
            </if>
      order by m.sort
    </select>

</mapper>